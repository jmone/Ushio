<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/base_padding"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/label_primary"
        android:text="@string/label_subject_status"/>

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/subject_grade_sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:spinnerMode="dropdown">
    </android.support.v7.widget.AppCompatSpinner>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/label_primary"
        android:text="@string/label_subject_rating" />

    <com.xw.repo.BubbleSeekBar
        android:id="@+id/subject_grade_sb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/base_padding"
        app:bsb_max="10"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/label_primary"
        android:text="@string/label_subject_comment" />

    <EditText
        android:id="@+id/subject_grade_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|top"
        android:padding="4dp"
        android:lines="6"
        android:maxLines="6"
        android:background="@drawable/shape_square_normal"/>
</LinearLayout>